<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="#DDFBF0">
    
 <TextView
        android:id="@+id/tituloLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:text="@string/tituloLogin"
        android:textAppearance="?android:attr/textAppearanceLarge" 
        android:textColor="#2B605B"/>

    <EditText
        android:id="@+id/loginUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/tituloLogin"
        android:ems="10"
        android:hint="@string/hintUsuario"
        android:textColor="#2B605B"
        android:textColorHint="#40938C" />

    <EditText
        android:id="@+id/loginPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/loginUsuario"
        android:layout_alignBottom="@+id/loginUsuario"
        android:layout_toRightOf="@+id/tituloLogin"
        android:ems="10"
        android:hint="@string/hintPass"
        android:inputType="textPassword"
        android:textColor="#2B605B"
        android:textColorHint="#40938C" />

    <Button
        android:id="@+id/buttonLoginEntrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="28dp"
        android:background="@drawable/boton_pulsado"
        android:text="@string/botonEntrar"
        android:textColor="@android:color/white" />
    
</RelativeLayout>