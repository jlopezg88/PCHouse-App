<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DDFBF0" >

    <fragment
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/tituloDireccion"
        class="com.google.android.gms.maps.SupportMapFragment" />

    <TextView
        android:id="@+id/textDireccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/map"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@+id/map"
        android:text="@string/direcLocal"
        android:textColor="#40938C" />

    <TextView
        android:id="@+id/tituloDireccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginRight="49dp"
        android:layout_toLeftOf="@+id/textMovil"
        android:text="@string/direccion"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#2B605B" />

    <TextView
        android:id="@+id/textTelefono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textDireccion"
        android:layout_below="@+id/textDireccion"
        android:text="@string/telefonoLocal"
        android:textColor="#40938C" />

    <TextView
        android:id="@+id/textFax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textTelefono"
        android:layout_below="@+id/textTelefono"
        android:text="@string/fax"
        android:textColor="#40938C" />

    <TextView
        android:id="@+id/textEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textFax"
        android:layout_toRightOf="@+id/map"
        android:text="@string/email"
        android:textColor="#40938C" />

    <TextView
        android:id="@+id/textMovil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textTelefono"
        android:layout_marginRight="18dp"
        android:text="@string/movil"
        android:textColor="#40938C" />

    <TextView
        android:id="@+id/textWeb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/map"
        android:layout_alignBottom="@+id/map"
        android:layout_alignLeft="@+id/textEmail"
        android:text="@string/web"
        android:textColor="#40938C" />

</RelativeLayout>